@model Student

<p>
    Do you want to delete the student named <b>@Model.StudentName @Model.StudentSurname</b>
    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.StudentId" />
        <button type="submit" class="btn btn-danger">Yes</button>
        <a asp-action="Index" class="btn btn-primary">No</a>
    </form>
</p>