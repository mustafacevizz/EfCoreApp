@model IEnumerable<Teacher>
<h2>Teacher List</h2>
<a href="/Teacher/Create" class="btn btn-primary">Add Teacher</a>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:150px;">@Html.DisplayNameFor(m => m.TeacherId)</th>
            <th>@Html.DisplayNameFor(m => m.TeacherName)</th>
            <th>@Html.DisplayNameFor(m => m.TeacherSurname)</th>
            <th>@Html.DisplayNameFor(m => m.StartingDate)</th>
            <th style="width:150px;"></th>
        </tr>    
    
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=> item.TeacherId)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherName)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherSurname)</td>
                <td>@Html.DisplayFor(modelItem => item.StartingDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>