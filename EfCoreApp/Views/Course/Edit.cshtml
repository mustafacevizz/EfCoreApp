@model CourseViewModel
<h2>Edit Course Information</h2>
<hr />
<div class="row">
    <div class="col-8">
        <form asp-controller="Course" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="CourseId" />
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Course Name</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="TeacherId" class="form-label">Teacher</label>
                <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select">
                    <option value="">Select</option>
                </select>
            </div>
            <button type="submit" class="btn btn-secondary">Save</button>
        </form>

    </div>
    <div class="col-4">
        <h4>Students</h4>
        <hr/>
        <ul>
            @foreach(var item in Model.RegisterCourses)
            {
                <li>@item.Student.StudentFullName</li>
            }
        </ul>
    </div>
</div>
